version: '3.8'
services:
  backend:
    build:                      # Note: 'build' becomes an object
      context: .                # Use '.' for current directory, not 'contextPath'
      dockerfile: Dockerfile    # This goes under 'build'
    container_name: node-backend
    ports:
      - "3001:3001"
    environment:
      - EMAIL=${EMAIL}
      - PASSWORD=${PASSWORD}
      - RAZORPAY_KEY_ID=${RAZORPAY_KEY_ID}
      - RAZORPAY_KEY_SECRET=${RAZORPAY_KEY_SECRET}