<script>


function openModal() {
    document.getElementById('myModal').style.display = 'flex';
  }

  function closeModal() {
    document.getElementById('myModal').style.display = 'none';
  }

  function sendMessage() {
    var data = document.getElementById('messageInput');

   var data = {data: data.value};
    


     if(data) {
        $.ajax({
            type: 'POST',
            url: '/admin/addCetagory',
            data: JSON.stringify(data),
            contentType: 'application/JSON',
            success: (res) => {
                if(res.saved) {
                    $('#AreaReload').load('/admin/cetagory #AreaReload');
                } else {
                    return console.log('error');
                }
            }

        })
     } else {
        console.log('did not received data from add cetagory');
     }
    closeModal();
  }



  function list(id) {
    
    
    const data = {data: id}
    console.log(data)

    if(data) {
        Swal.fire({
            title: 'Are you sure',
            text: 'You want to List/Unlist user',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes!',
        })
        .then((res) => {
            if(res.isConfirmed) {
                
                console.log("ajax")
                $.ajax({
                    type: 'POST',
                    url: '/admin/listCetagory',
                    data: JSON.stringify(data),
                    contentType: 'application/JSON',
                    success: (res) => {
                        if(res.listed) {
                            $('#AreaReload').load('/admin/cetagory #AreaReload');
                        }
                    }

                })

            } else {
                console.log('Error in list')
            }
        })
        .catch((err) => {
            console.log(err)
        })

    }

  }


</script>

