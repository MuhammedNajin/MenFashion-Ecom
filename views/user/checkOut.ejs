<script>
    

    function placeOrder(total) {
        try {

            const radioBtn = document.querySelector('input[name="address"]:checked');
             const  index = radioBtn ? radioBtn.value : null;
            if(index) {
                
                const payment = document.querySelector('input[name="payment_method"]:checked');
                const paymet_method = payment ? payment.value : null;

                if(paymet_method) {

                    const subtotal = total;
                if(subtotal) {

                    const data = {
                        index: index,
                        payment_method: paymet_method,
                        subtotal: subtotal,
                    }
                    console.log(data)
                    $.ajax({
                        type: 'POST',
                        url: '/place-order',
                        data: JSON.stringify(data),
                        contentType: 'application/JSON',
                        success: (response) => {
                             if(response.success) {
                                location.href = '/order-success';
                             }
                        }

                    })

                } else {
                    console.log('total amount not recived...');
                }

                } else {
                    console.log('please select payment method')
                }

                

            } else {
                console.log('please select address');
            }

           
        } catch (error) {
            console.log(error);
        }
    }


</script>